NODE_ENV=development
PORT=3000

# Set to a long random value in production (min 16 chars)
JWT_SECRET=replace_me_with_a_long_random_secret
JWT_EXPIRES_IN=7d

# CORS (comma-separated). Production: https://mahjongboss.com (no trailing slash)
ALLOWED_ORIGINS=http://localhost:3000

# PostgreSQL: use either DATABASE_URL or separate DB_* variables (DB_* preferred in cPanel)
DATABASE_URL=

# Or set each separately (password can contain special chars; no encoding needed):
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mahjong
DB_USER=postgres
DB_PASSWORD=your_password

