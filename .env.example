NODE_ENV=development
PORT=3000

# Set to a long random value in production (min 16 chars)
JWT_SECRET=replace_me_with_a_long_random_secret
JWT_EXPIRES_IN=7d

# CORS (comma-separated). Production: https://mahjongboss.com (no trailing slash)
ALLOWED_ORIGINS=http://localhost:3000

# PostgreSQL. If password has special chars ({ } + @ etc), URL-encode them: {=%7B }=%7D +=%2B
DATABASE_URL=postgres://postgres:postgres@localhost:5432/mahjong

